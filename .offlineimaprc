[general]
accounts = recv, dooer, gmail

[Account gmail]
localrepository  = gmail-local
remoterepository = gmail-remote

[Repository gmail-local]
type         = Maildir
localfolders = ~/mail/gmail

[Repository gmail-remote]
type                 = Gmail
ssl                  = true
sslcacertfile        = /etc/ssl/certs/ca-certificates.crt
ssl_version          = tls1_2
realdelete           = no
remoteuser           = osclin@gmail.com
oauth2_client_id     =
oauth2_client_secret =
oauth2_request_url   =
oauth2_refresh_token =

[Account recv]
localrepository  = recv-local
remoterepository = recv-remote

