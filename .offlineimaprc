ssl                  = true
sslcacertfile        = /etc/ssl/certs/ca-certificates.crt
ssl_version          = tls1_2
realdelete           = no
remoteuser           = osm@recv.se
oauth2_client_id     =
oauth2_client_secret =
oauth2_request_url   =
oauth2_refresh_token =

